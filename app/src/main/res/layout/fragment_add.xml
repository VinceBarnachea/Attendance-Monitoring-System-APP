<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/bg"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:text="ADD CLASS &amp; STUDENT"
        android:background="@drawable/border"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:fontFamily="georgia"
        android:padding="10dp"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="#000"
        android:layout_marginHorizontal="20dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"/>




    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/sectionIL"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/section"
            android:layout_width="match_parent"
            android:fontFamily="georgia"
            android:padding="10dp"
            android:hint="Enter new section"
            android:layout_height="wrap_content"/>


    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/student"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sectionIL"
        >

        <EditText
            android:id="@+id/student1"
            android:layout_width="match_parent"
            android:hint="Enter new student"
            android:padding="10dp"
            android:fontFamily="georgia"
            android:layout_height="wrap_content"

            />


    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/save"
        android:padding="5dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="18dp"
        android:background="@drawable/custom5"
        android:textColor="#fff"
        android:layout_below="@+id/student"
        android:layout_centerHorizontal="true"
        android:text="Save Data"/>



</RelativeLayout>